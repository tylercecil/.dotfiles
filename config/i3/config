set $mod Mod4
set $sysFont font pango:Source Code Pro 15
set $term ~/bin/smart_open_shell.sh
set $locker i3lock -b -c 073642

# Solarized Colors
set $base03    #002b36
set $base02    #073642
set $base01    #586e75
set $base00    #657b83
set $base0     #839496
set $base1     #93a1a1
